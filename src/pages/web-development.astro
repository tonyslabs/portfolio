---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
import { projects } from "../data/web";

const meta = {
  title: "Frontend y UX | Anthony Lacayo",
  description:
    "Interfaces modernas y sistemas web responsivos con Astro, React y TailwindCSS.",
  image: "/og-image.jpg",
  url: "https://anthonylacayo.com/web-development",
};
---

<Layout {...meta} path="/web-development">
  <!-- Fondo difuminado -->
  <div class="grid-background">
    <img src="/assets/grid-top-right.svg" alt="" class="grid-svg" />
  </div>

  <div class="page-wrapper">
    <Sidebar selectedItem="web-development" />
    <main class="main-content">
      <div class="container">
        <!-- Back -->
        <div class="back-nav-container" data-animate>
          <a href="/" class="back-nav-button" aria-label="Volver al inicio">
            <img src="/assets/back.svg" alt="Flecha de volver" class="back-nav-img" />
            <span>Volver</span>
          </a>
        </div>

        <!-- Content -->
        <div class="content-container" data-animate>
          <h1>Frontend y UX</h1>
          <section class="items-container">
            <div class="resource-items">
              {
                projects.map((project, i) => (
                  <Project
                    title={project.title}
                    desc={project.desc}
                    tech={project.tech}
                    images={project.images}
                    lightboxId={`gallery-${i}`}
                  />
                ))
              }
            </div>
          </section>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  :root {
    --bg: linear-gradient(
      180deg,
      rgba(7, 10, 38, 0.98) 0%,
      rgba(7, 10, 38, 0.92) 100%
    );
    --accent: #863dff;
    --accent-hover: #dde0ff;
    --text: #ffffff;
    --text-muted: #dde0ff;
    --card-bg: rgba(255, 255, 255, 0.04);
    --card-border: rgba(255, 255, 255, 0.08);
    --radius: 18px;
    --sidebar-width: 260px;
    --transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    --project-card-max: 1280px;
  }

  /* Fondo */
  .grid-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }
  .grid-svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1800px;
    opacity: 0.14;
    filter: blur(70px) brightness(1.4);
  }

  /* Layout */
  .page-wrapper {
    position: relative;
    z-index: 1;
    display: flex;
    min-height: 100vh;
    background: var(--bg);
    background-attachment: fixed;
    color: var(--text);
    overflow: hidden;
  }
  .main-content {
    flex: 1;
    padding: 2.2rem 1.5rem;
    padding-left: calc(var(--sidebar-width) + 1.5rem);
    position: relative;
    z-index: 2;
    overflow-x: hidden;
  }
  @media (max-width: 900px) {
    .main-content {
      padding-left: 1rem;
    }
  }
  .container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* Back */
  .back-nav-container {
    margin-bottom: 2rem;
  }
  .back-nav-button {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    color: var(--text-muted);
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: var(--transition);
    padding: 0.4rem 0;
  }
  .back-nav-button:hover {
    color: #fff;
    transform: translateX(-4px);
  }
  .back-nav-img {
    width: 18px;
    height: 18px;
    filter: brightness(0) invert(1);
    opacity: 0.7;
    transition: var(--transition);
  }
  .back-nav-button:hover .back-nav-img {
    opacity: 1;
    transform: translateX(-2px);
  }

  /* Título y descripción */
  .content-container h1 {
    font-size: clamp(2.2rem, 5vw, 2.8rem);
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff, #d0d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .section-intro {
    color: var(--text-muted);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  /* Lista de proyectos (igual que /personal-projects) */
  .items-container {
    margin-top: 1rem;
  }
  .resource-items {
    display: flex;
    flex-direction: column;
    gap: 2.2rem;
    padding: 0;
    list-style: none;
    align-items: center;
    width: 100%;
  }

  /* Animaciones */
  [data-animate] {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s ease,
      transform 0.8s ease;
  }
  [data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-content {
      padding: 2rem 1rem;
    }
    .content-container h1 {
      margin-bottom: 0.8rem;
    }
    .section-intro {
      font-size: 0.95rem;
      margin-bottom: 2rem;
    }
    .grid-svg {
      width: 1200px;
      filter: blur(50px);
    }
  }
</style>
