---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
import { projects } from "../data/web";

const meta = {
  title: "Frontend & UX | Anthony Lacayo",
  description:
    "Modern interfaces and responsive web systems using Astro, React, and TailwindCSS.",
  image: "/og-image.jpg",
  url: "https://anthonylacayo.com/frontend-ux",
};
---

<Layout {...meta} path="/frontend-ux">
  <!-- Fondo difuminado -->
  <div class="grid-background">
    <img src="/assets/grid-top-right.svg" alt="" class="grid-svg" />
  </div>

  <div class="page-wrapper">
    <Sidebar selectedItem="frontend-ux" />
    <main class="main-content">
      <div class="container">
        <!-- Back -->
        <div class="back-nav-container" data-animate>
          <a href="/" class="back-nav-button" aria-label="Go back to homepage">
            <img src="/assets/back.svg" alt="Back arrow" class="back-nav-img" />
            <span>Back</span>
          </a>
        </div>

        <!-- Content -->
          <h1>Frontend & UX</h1>
          <p class="section-intro">
            Selected front-end projects focused on performance, responsive
            design, and accessibility. Each interface is built using Astro,
            React, TailwindCSS, and modern web standards.
          </p>

          <section class="items-container">
            <div class="resource-items">
              {
                projects.map((project, i) => (
                  <Project
                    title={project.title}
                    desc={project.desc}
                    tech={project.tech}
                    images={project.images}
                    lightboxId={`gallery-${i}`}
                  />
                ))
              }
            </div>
          </section>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  :root {
    --bg: linear-gradient(
      180deg,
      rgba(20, 20, 28, 0.98) 0%,
      rgba(10, 10, 18, 0.98) 100%
    );
    --accent: #6e56cf;
    --accent-hover: #8b70ff;
    --text: #e2e8f0;
    --text-muted: #94a3b8;
    --card-bg: rgba(255, 255, 255, 0.04);
    --card-border: rgba(255, 255, 255, 0.08);
    --radius: 18px;
    --sidebar-width: 260px;
    --transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Fondo */
  .grid-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }
  .grid-svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1800px;
    opacity: 0.14;
    filter: blur(70px) brightness(1.4);
  }

  /* Layout */
  .page-wrapper {
    position: relative;
    z-index: 1;
    display: flex;
    min-height: 100vh;
    background: var(--bg);
    color: var(--text);
    overflow: hidden;
  }
  .main-content {
    flex: 1;
    padding: 3rem 2rem;
    padding-left: calc(var(--sidebar-width) + 2rem);
    position: relative;
    z-index: 2;
  }
  @media (max-width: 900px) {
    .main-content {
      padding-left: 1rem;
    }
  }
  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Back */
  .back-nav-container {
    margin-bottom: 2rem;
  }
  .back-nav-button {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    color: var(--text-muted);
    font-size: 0.95rem;
    text-decoration: none;
    transition: var(--transition);
  }
  .back-nav-button:hover {
    color: #fff;
    transform: translateX(-4px);
  }
  .back-nav-img {
    width: 18px;
    height: 18px;
    filter: brightness(0) invert(1);
    opacity: 0.7;
    transition: var(--transition);
  }
  .back-nav-button:hover .back-nav-img {
    opacity: 1;
    transform: translateX(-2px);
  }

  /* Título y descripción */
  .content-container h1 {
    font-size: clamp(2.2rem, 5vw, 2.8rem);
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff, #d0d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .section-intro {
    color: var(--text-muted);
    font-size: 1rem;
    max-width: 720px;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  /* Grid de proyectos */
  /* Grid de proyectos */
  .resource-items {
    display: grid;
    grid-template-columns: repeat(
      auto-fill,
      minmax(380px, 1fr)
    ); /* antes 320px */
    gap: 2.4rem; /* un poco más de separación */
  }

  /* Responsive */
  @media (max-width: 768px) {
    .resource-items {
      grid-template-columns: 1fr;
      gap: 1.8rem;
    }
  }

  @media (min-width: 1400px) {
    .resource-items {
      grid-template-columns: repeat(
        auto-fill,
        minmax(420px, 1fr)
      ); /* más aire en pantallas grandes */
    }
  }

  /* Animaciones */
  [data-animate] {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s ease,
      transform 0.8s ease;
  }
  [data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-content {
      padding: 2rem 1rem;
    }
    .content-container h1 {
      margin-bottom: 0.8rem;
    }
    .section-intro {
      font-size: 0.95rem;
      margin-bottom: 2rem;
    }
    .resource-items {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .grid-svg {
      width: 1200px;
      filter: blur(50px);
    }
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) =>
      entries.forEach((e) => {
        if (e.isIntersecting) e.target.classList.add("visible");
      }),
    { threshold: 0.1 },
  );
  document
    .querySelectorAll("[data-animate]")
    .forEach((el) => observer.observe(el));
</script>
