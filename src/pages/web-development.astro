---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
import { projects } from "../data/web";

const meta = {
  title: "Plataformas Web | Astro y React | Anthony Lacayo",
  description:
    "Plataformas web de alto rendimiento construidas con Astro y React, enfocadas en gobernabilidad corporativa, performance y experiencia de usuario consistente.",
  image: "/og-image.jpg",
  url: "https://anthonylacayo.com/web-development",
};
---

<Layout {...meta} path="/web-development">
  <!-- Fondo difuminado -->

  <div class="page-wrapper">
    <Sidebar selectedItem="web-development" />
    <main class="main-content">
      <div class="container">
        <!-- Content -->
        <div class="content-container" data-animate>
          <header class="page-header">
            <div>
              <h1>Plataformas Web</h1>
              <p class="section-intro">
                Diseño y prototipado de experiencias web escalables, cuidando accesibilidad, rendimiento y consistencia de marca.
              </p>
            </div>
            <div class="header-meta">
              <span>+30 plataformas e-commerce impulsadas</span>
              <span class="separator" aria-hidden="true">•</span>
              <span>Stack: Laravel • React • FastApi • MySql </span>
            </div>
          </header>
          <section class="items-container">
            <div class="resource-items">
              {
                projects.map((project, i) => (
                  <Project
                    title={project.title}
                    desc={project.desc}
                    tech={project.tech}
                    images={project.images}
                    lightboxId={`gallery-${i}`}
                  />
                ))
              }
            </div>
          </section>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  :root {
    --bg: linear-gradient(
      180deg,
      rgba(7, 10, 38, 0.98) 0%,
      rgba(7, 10, 38, 0.92) 100%
    );
    --accent: #863dff;
    --accent-hover: #dde0ff;
    --text: #ffffff;
    --text-muted: #dde0ff;
    --card-bg: rgba(255, 255, 255, 0.04);
    --card-border: rgba(255, 255, 255, 0.08);
    --radius: 18px;
    --sidebar-width: 260px;
    --transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    --project-card-max: 1280px;
  }

  /* Layout */
  .page-wrapper {
    position: relative;
    z-index: 1;
    display: flex;
    min-height: 100vh;
    background: var(--bg);
    background-attachment: fixed;
    color: var(--text);
    overflow: hidden;
  }
  .main-content {
    flex: 1;
    padding: 2.2rem 1.5rem;
    padding-left: calc(var(--sidebar-width) + 1.5rem);
    position: relative;
    z-index: 2;
    overflow-x: hidden;
  }
  @media (max-width: 900px) {
    .main-content {
      padding-left: 1rem;
    }
  }
  .container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* Título y descripción */
  .content-container h1 {
    font-size: clamp(2.2rem, 5vw, 2.8rem);
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff, #d0d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .section-intro {
    color: var(--text-muted);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  /* Lista de proyectos (igual que /personal-projects) */
  .items-container {
    margin-top: 1rem;
  }
  .resource-items {
    display: flex;
    flex-direction: column;
    gap: 2.2rem;
    padding: 0;
    list-style: none;
    align-items: center;
    width: 100%;
  }
  .page-header {
    background: linear-gradient(160deg, rgba(134, 61, 255, 0.2), rgba(7, 13, 43, 0.9));
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 32px;
    padding: 2rem 2.5rem;
    margin: 0 auto 1.5rem;
    box-shadow: 0 30px 60px rgba(6, 9, 26, 0.65);
    width: 100%;
    max-width: 1120px;
  }
  .page-header h1 {
    margin-bottom: 0.6rem;
  }
  .header-meta {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    color: rgba(221, 224, 255, 0.75);
    font-size: 0.95rem;
    letter-spacing: 0.02em;
  }
  .header-meta .separator {
    color: rgba(255, 255, 255, 0.3);
  }

  /* Animaciones */
  [data-animate] {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s ease,
      transform 0.8s ease;
  }
  [data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-content {
      padding: 2rem 1rem;
    }
    .content-container h1 {
      margin-bottom: 0.8rem;
    }
    .page-header {
      padding: 1.6rem 1.8rem;
      border-radius: 24px;
      box-shadow: 0 20px 40px rgba(6, 9, 26, 0.6);
    }
    .section-intro {
      font-size: 0.95rem;
      margin-bottom: 2rem;
    }
  }
</style>
