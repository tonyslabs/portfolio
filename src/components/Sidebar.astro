<button
  id="toggleSidebar"
  aria-label="Abrir/cerrar navegación"
  aria-controls="sidebar"
  aria-expanded="false"
  class="hamburger"
>
  <span class="hamburger-line"></span>
  <span class="hamburger-line"></span>
  <span class="hamburger-line"></span>
</button>

<script>
  function setupSidebar() {
    const sidebar = document.getElementById('sidebar');
    const toggle = document.getElementById('toggleSidebar');
    if (!sidebar || !toggle) return () => {};

    const handleResize = () => {
      if (window.innerWidth >= 1024) {
        sidebar.classList.add('open');
        toggle.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'true');
      } else {
        sidebar.classList.remove('open');
        toggle.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'false');
      }
    };

    handleResize();
    window.addEventListener('resize', handleResize);

    const onToggle = () => {
      sidebar.classList.toggle('open');
      toggle.classList.toggle('open');
      toggle.setAttribute(
        'aria-expanded',
        sidebar.classList.contains('open') ? 'true' : 'false',
      );
    };
    toggle.addEventListener('click', onToggle);

    const onDocClick = (e) => {
      if (
        window.innerWidth < 1024 &&
        sidebar.classList.contains('open') &&
        !sidebar.contains(e.target) &&
        !toggle.contains(e.target)
      ) {
        sidebar.classList.remove('open');
        toggle.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'false');
      }
    };
    document.addEventListener('click', onDocClick);

    return () => {
      window.removeEventListener('resize', handleResize);
      toggle.removeEventListener('click', onToggle);
      document.removeEventListener('click', onDocClick);
    };
  }

  let cleanup;
  document.addEventListener('astro:page-load', () => {
    if (cleanup) cleanup();
    cleanup = setupSidebar();
  });
  document.addEventListener('astro:before-swap', () => {
    if (cleanup) cleanup();
  });
</script>

<style>
  :root {
    --bg: linear-gradient(180deg, rgba(7, 10, 38, 0.98) 0%, rgba(7, 10, 38, 0.92) 100%);
    --accent: #863dff;
    --accent-hover: #dde0ff;
    --text: #ffffff;
    --text-muted: #dde0ff;
    --border: rgba(255, 255, 255, 0.1);
    --width: 260px;
    --radius: 16px;
  }

	  .sidebar {
	    position: fixed;
	    top: 0;
	    left: -var(--width);
	    width: var(--width);
	    height: 100vh;
	    background: linear-gradient(
	      180deg,
	      rgba(7, 10, 38, 0.96) 0%,
	      rgba(7, 10, 38, 0.92) 60%,
	      rgba(7, 10, 38, 0.88) 100%
	    );
	    backdrop-filter: blur(20px);
	    border-right: 1px solid var(--border);
	    transition: left 0.35s cubic-bezier(0.4, 0, 0.2, 1);
	    z-index: 60;
	    display: flex;
	    flex-direction: column;
	  }
  .sidebar.open { left: 0; }
  @media (min-width: 1024px) { .sidebar { left: 0; } }

	  .sidebar-inner {
	    padding: 1.5rem 1.25rem;
	    display: flex;
	    flex-direction: column;
	    height: 100%;
	    overflow-y: auto;
	  }

	  .profile { text-align: center; margin-bottom: 1.4rem; }
	  .profile-name { color: #fff; font-weight: 700; font-size: 1.1rem; }
	  .profile-role { color: var(--text-muted); font-size: 0.8rem; margin-top: 0.25rem; }

  .nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }
	  .nav-item {
	    display: flex;
	    align-items: center;
	    padding: 0.78rem 0.9rem;
	    color: var(--text);
	    border-radius: var(--radius);
	    position: relative;
	    transition: all 0.3s ease;
	    text-decoration: none;
	    background: rgba(255, 255, 255, 0.02);
	    border: 1px solid rgba(255, 255, 255, 0.06);
	    overflow: hidden;
	  }
	  .nav-label {
	    margin-left: 10px;
	    font-size: 0.95rem;
	    white-space: nowrap;
	    overflow: hidden;
	    text-overflow: ellipsis;
	    flex: 1;
	    min-width: 0;
	  }

	  .nav-item.active {
	    color: #fff;
	    font-weight: 600;
	    transform: none;
	    padding: 0.82rem 1.05rem;
	    background: linear-gradient(135deg, rgba(134, 61, 255, 0.18), rgba(221, 224, 255, 0.06));
	    border-color: rgba(134, 61, 255, 0.28);
	    box-shadow: 0 0 0 1px rgba(134, 61, 255, 0.14), 0 0 36px rgba(134, 61, 255, 0.14);
	  }
	  .nav-item:hover { color: #fff; transform: translateX(2px); border-color: rgba(221,224,255,0.18); }

  .nav-icon-wrapper {
    width: 26px;
    height: 26px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .icon {
    width: 20px;
    height: 20px;
    background: currentColor;
    mask-size: contain;
    mask-repeat: no-repeat;
    mask-position: center;
    transition: transform 0.3s ease;
  }
  .nav-item:hover .icon { transform: scale(1.1); }

  /* === ICONOS ACTUALIZADOS === */
