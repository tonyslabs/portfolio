<button
  type="button"
  class="dock-toggle"
  id="dockToggle"
  aria-label="Ocultar navegación"
  aria-pressed="false"
>
  <span class="dock-toggle-icon" aria-hidden="true">
    <svg
      class="dock-toggle-svg"
      viewBox="0 0 24 24"
      width="14"
      height="14"
      focusable="false"
      aria-hidden="true"
    >
      <path
        fill="currentColor"
        d="M7.41 8.59 12 13.17l4.59-4.58L18 10l-6 6-6-6z"
      />
    </svg>
  </span>
</button>

<script>
  function setupDockToggle() {
    const toggle = document.getElementById('dockToggle');
    const dock = document.querySelector('.mobile-dock');
    if (!toggle || !dock) return () => {};

    const storageKey = 'dockHidden';

    const apply = (hidden) => {
      document.body.classList.toggle('dock-hidden', hidden);
      toggle.setAttribute('aria-pressed', String(hidden));
      toggle.setAttribute('aria-label', hidden ? 'Mostrar navegación' : 'Ocultar navegación');
    };

    const initial = (() => {
      try {
        return localStorage.getItem(storageKey) === '1';
      } catch {
        return false;
      }
    })();

    apply(initial);

    const onClick = () => {
      const next = !document.body.classList.contains('dock-hidden');
      apply(next);
      try {
        localStorage.setItem(storageKey, next ? '1' : '0');
      } catch {}
    };

    toggle.addEventListener('click', onClick);
    return () => toggle.removeEventListener('click', onClick);
  }

  let cleanupDock;
  document.addEventListener('astro:page-load', () => {
    if (cleanupDock) cleanupDock();
    cleanupDock = setupDockToggle();
  });
  document.addEventListener('astro:before-swap', () => {
    if (cleanupDock) cleanupDock();
  });
</script>

