---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
import { projects } from "../data/web";
---

<Layout
  title="Web Development | Tony Lacayo"
  description="Selected web apps and systems: Laravel, FastAPI, Tailwind."
  path="/web-development"
>
  <div class="content">
    <Sidebar selectedItem="web-development" />
    <main class="main">
      <div class="container">
        <div class="back-nav-container">
          <a href="/" class="back-nav-button w-inline-block">
            <img
              src="/assets/back.svg"
              loading="lazy"
              alt="Back icon"
              class="back-nav-img"
            />
            <div>Back</div>
          </a>
        </div>

        <div class="content-container">
          <h1>Web Development</h1>
          <section class="items-container">
            <div class="resouce-items">
              {
                projects.map((project, i) => (
                  <Project
                    title={project.title}
                    desc={project.desc}
                    tech={project.tech}
                    images={project.images}
                    lightboxId={`gallery-${i}`}
                  />
                ))
              }
            </div>
          </section>
        </div>
      </div>
    </main>
  </div>
</Layout>
