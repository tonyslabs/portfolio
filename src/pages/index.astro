---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
const meta = {
  title: "Anthony Lacayo | Desarrollador Full Stack",
  description:
    "Desarrollador especializado en sistemas web modernos, arquitectura backend y automatización.",
  image: "/og-image.jpg",
  url: "https://anthonylacayo.com/",
};
---
  <Layout {...meta} path="/">
  <div class="grid-background">
    <img src="/assets/grid-top-right.svg" alt="" class="grid-svg" />
  </div>
  <div class="page-wrapper">
    <Sidebar selectedItem="home" />
    <main class="main-content">
      <div class="container">
        <!-- Hero -->
        <section class="hero" data-animate>
          <div class="hero-content">
            <h1>Hola, soy Anthony.<br />Construyo y conecto sistemas web.</h1>
            <p class="lead">
              Desarrollador Full Stack enfocado en arquitectura backend, diseño
              de APIs y automatización. Experiencia con Laravel, FastAPI e
              integraciones REST/JSON. Apasionado por el rendimiento, la
              escalabilidad y las interfaces elegantes.
            </p>
            <a href="mailto:Anthony@strivexlabs.com" class="contact-btn">
              Contactar <span class="btn-arrow">→</span>
            </a>
            <div class="hero-actions">
              <a href="/cv.pdf" class="secondary-btn" download aria-label="Descargar CV">
                Descargar CV <span class="btn-arrow">→</span>
              </a>
              <div class="hero-social">
                <a href="https://github.com/tu-usuario" target="_blank" rel="noopener noreferrer" class="icon-btn" aria-label="GitHub">
                  <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                    <path fill="currentColor" d="M12 .5C5.73.5.75 5.67.75 12.1c0 5.14 3.33 9.5 7.95 11.03.58.11.8-.26.8-.57 0-.28-.01-1.02-.02-2-3.23.72-3.91-1.6-3.91-1.6-.53-1.39-1.29-1.76-1.29-1.76-1.06-.74.08-.72.08-.72 1.17.08 1.78 1.25 1.78 1.25 1.04 1.83 2.72 1.3 3.39 1 .11-.77.41-1.3.74-1.6-2.58-.3-5.29-1.33-5.29-5.91 0-1.31.45-2.38 1.19-3.22-.12-.3-.52-1.51.11-3.14 0 0 .97-.32 3.18 1.23.92-.26 1.9-.39 2.88-.39s1.96.13 2.88.39c2.21-1.55 3.18-1.23 3.18-1.23.63 1.63.23 2.84.11 3.14.74.84 1.19 1.91 1.19 3.22 0 4.6-2.72 5.61-5.31 5.91.42.37.8 1.1.8 2.22 0 1.6-.01 2.88-.01 3.27 0 .31.21.69.81.57 4.62-1.53 7.95-5.89 7.95-11.03C23.25 5.67 18.27.5 12 .5z"/>
                  </svg>
                </a>
                <a href="https://www.linkedin.com/in/tu-usuario" target="_blank" rel="noopener noreferrer" class="icon-btn" aria-label="LinkedIn">
                  <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                    <path fill="currentColor" d="M20.45 20.45h-3.56v-5.57c0-1.33-.03-3.03-1.85-3.03-1.86 0-2.14 1.45-2.14 2.93v5.67H9.34V9h3.42v1.56h.05c.48-.9 1.66-1.85 3.41-1.85 3.65 0 4.32 2.4 4.32 5.52v6.22zM5.34 7.43a2.07 2.07 0 1 1 0-4.14 2.07 2.07 0 0 1 0 4.14zM7.12 20.45H3.56V9h3.56v11.45z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </section>

        <!-- Expertise -->
        <section class="projects-section" data-animate>
          <div class="section-header">
            <h2>Mis Áreas de Desarrollo</h2>
          </div>
          <div class="projects-track" id="projects-track">
            <!-- Frontend & UX -->
            <a href="/web-development" class="project-card" aria-label="Frontend y diseño UX">
              <div class="icon">
                <img src="/assets/icons/layout.svg" alt="Icono de Frontend" />
              </div>
              <div class="content">
                <h3>Frontend & Diseño UX</h3>
                <div class="chips">
                  <span class="chip">Astro</span>
                  <span class="chip">React</span>
                  <span class="chip">Alpine.js</span>
                  <span class="chip">TailwindCSS</span>
                  <span class="chip">Vite</span>
                  <span class="chip">TypeScript</span>
                  <span class="chip">UI Responsiva</span>
                </div>
              </div>
            </a>

            <!-- Backend & APIs -->
            <a href="/api-integrations" class="project-card" aria-label="Backend y desarrollo de APIs">
              <div class="icon">
                <img src="/assets/icons/server.svg" alt="Icono de Backend" />
              </div>
              <div class="content">
                <h3>Backend & Desarrollo de APIs</h3>
                <div class="chips">
                  <span class="chip">Laravel</span>
                  <span class="chip">FastAPI</span>
                  <span class="chip">Python</span>
                  <span class="chip">PHP</span>
                  <span class="chip">MySQL</span>
                  <span class="chip">PostgreSQL</span>
                  <span class="chip">REST / JSON</span>
                </div>
              </div>
            </a>

            <!-- Automation & Infrastructure -->
            <a href="/infrastructure" class="project-card" aria-label="Automatización e infraestructura">
              <div class="icon">
                <img src="/assets/icons/terminal.svg" alt="Icono de DevOps" />
              </div>
              <div class="content">
                <h3>Automatización & Infraestructura</h3>
                <div class="chips">
                  <span class="chip">Linux</span>
                  <span class="chip">Docker</span>
                  <span class="chip">Nginx</span>
                  <span class="chip">GitHub Actions</span>
                  <span class="chip">Cron</span>
                  <span class="chip">CI/CD</span>
                  <span class="chip">Bash</span>
                </div>
              </div>
            </a>

            <!-- Personal Projects -->
            <a href="/personal-projects" class="project-card" aria-label="Proyectos personales y experimentos">
              <div class="icon">
                <img src="/assets/icons/flask.svg" alt="Icono de Proyectos" />
              </div>
              <div class="content">
                <h3>Proyectos Personales & Experimentos</h3>
                <div class="chips">
                  <span class="chip">Electron</span>
                  <span class="chip">Nextcloud</span>
                  <span class="chip">Tailscale</span>
                  <span class="chip">Auto-hosting</span>
                  <span class="chip">Streaming</span>
                  <span class="chip">APIs</span>
                  <span class="chip">Código Abierto</span>
                </div>
              </div>
            </a>
          </div>
        </section>
      </div>
    </main>
  </div>
</Layout>

<style>
  :root {
    --bg: linear-gradient(180deg, rgba(7, 10, 38, 0.98) 0%, rgba(7, 10, 38, 0.92) 100%);
    --accent: #863dff;
    --accent-hover: #dde0ff;
    --text: #ffffff;
    --text-muted: #dde0ff;
    --card-bg: rgba(255, 255, 255, 0.04);
    --card-border: rgba(255, 255, 255, 0.08);
    --radius: 18px;
    --sidebar-width: 260px;
    --transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }
  /* ===== GRID SVG DIFUMINADO AL FONDO ===== */
  .grid-background {
    position: fixed;
    top: 0; left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }
  .grid-svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1800px;
    height: auto;
    max-width: none;
    opacity: 0.14;
    filter: blur(70px) brightness(1.4);
    user-select: none;
  }
  /* ===== Layout ===== */
  .page-wrapper {
    position: relative;
    z-index: 1;
    display: flex;
    min-height: 100vh;
    background: var(--bg);
    background-attachment: fixed;
    color: var(--text);
    overflow: hidden;
  }
  .main-content {
    flex: 1;
    padding: 1.6rem 1.25rem;
    overflow-x: hidden;
    padding-left: calc(var(--sidebar-width) + 1.25rem);
    position: relative;
    z-index: 2;
  }
  /* Separación superior para que el hero no quede pegado al borde */
  .container { padding-top: 0.75rem; }
  @media (max-width: 900px) {
    .main-content { padding-left: 1rem; padding-top: 1.5rem; }
  }
  .container { max-width: 1300px; margin: 0 auto; position: relative; z-index: 2; }
  /* ===== Hero ===== */
  .hero {
    max-width: 780px;
    margin-bottom: 0.85rem;
  }
  .hero-content h1 {
    font-size: clamp(2.3rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem;
    background: linear-gradient(135deg, #fff, #d0d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -0.5px;
  }
  .lead {
    font-size: 1.08rem;
    color: var(--text-muted);
    line-height: 1.65;
    max-width: 680px;
    margin-bottom: 1.5rem; /* Reducido para compactar */
  }
  .contact-btn {
    display: inline-flex;
    align-items: center;
    gap: .5rem;
    background: linear-gradient(135deg, rgba(134, 61, 255, 0.95), rgba(221, 224, 255, 0.22));
    color: white;
    padding: .85rem 1.9rem;
    border-radius: 14px;
    font-weight: 600;
    font-size: .96rem;
    text-decoration: none;
    transition: var(--transition);
    border: 1px solid rgba(134, 61, 255, 0.25);
    box-shadow: 0 0 0 1px rgba(134, 61, 255, 0.14), 0 0 34px rgba(134, 61, 255, 0.18);
  }
  .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 0 1px rgba(221, 224, 255, 0.18), 0 0 46px rgba(134, 61, 255, 0.26);
  }
  .btn-arrow { transition: transform .3s ease; }
  .contact-btn:hover .btn-arrow { transform: translateX(4px); }

  .hero-actions {
    display: flex;
    align-items: center;
    gap: 0.9rem;
    margin-top: 0.9rem;
    flex-wrap: wrap;
  }

  .secondary-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.72rem 1.05rem;
    border-radius: 14px;
    text-decoration: none;
    color: rgba(221, 224, 255, 0.98);
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.09);
    transition: var(--transition);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .secondary-btn:hover {
    transform: translateY(-1px);
    border-color: rgba(134, 61, 255, 0.28);
    box-shadow: 0 0 0 1px rgba(134, 61, 255, 0.14), 0 0 28px rgba(134, 61, 255, 0.14);
    color: #fff;
  }

  .hero-social {
    display: inline-flex;
    gap: 0.55rem;
    align-items: center;
  }

  .icon-btn {
    width: 40px;
    height: 40px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.09);
    color: rgba(221, 224, 255, 0.92);
    text-decoration: none;
    transition: var(--transition);
  }
  .icon-btn:hover {
    transform: translateY(-1px);
    border-color: rgba(134, 61, 255, 0.28);
    color: #fff;
    box-shadow: 0 0 0 1px rgba(134, 61, 255, 0.14), 0 0 22px rgba(134, 61, 255, 0.14);
  }
  /* ===== Sections ===== */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.2rem; /* Reducido */
  }
  .section-header h2 { font-size: 1.45rem; font-weight: 600; color: white; }
  [data-animate] {
    opacity: 0;
    transform: translateY(25px);
    transition: opacity .8s ease, transform .8s ease;
  }
  [data-animate].visible { opacity: 1; transform: translateY(0); }
  /* ===== Projects ===== */
  .projects-section { 
    margin-top: 0.5rem; /* Muy cerca del botón */
    position: relative; 
    z-index: 2; 
  }
  .projects-track {
    display: flex;
    gap: 1.2rem;
    overflow-x: auto;
    padding: 1rem 0;
    scroll-snap-type: x mandatory;
    scroll-padding: 0 1.5rem;
    scrollbar-width: none;
    /* Centrado perfecto */
    justify-content: center;
    flex-wrap: nowrap;
  }
  .projects-track::before,
  .projects-track::after {
    content: '';
    flex: 0 0 1rem;
  }
  .projects-track::-webkit-scrollbar { display: none; }

  .project-card {
    flex: 0 0 310px;
    width: 310px;
    height: 250px;
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: var(--radius);
    padding: 1.4rem 1.1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    text-align: center;
    text-decoration: none;
    color: var(--text);
    backdrop-filter: blur(10px);
    transition: var(--transition);
    box-sizing: border-box;
    overflow: hidden;
    position: relative;
    z-index: 2;
  }
  .project-card:hover {
    background: rgba(255,255,255,.08);
    border-color: var(--accent);
    transform: translateY(-5px);
    box-shadow: 0 10px 24px rgba(0,0,0,.25);
  }
  .icon {
    width: 60px; height: 60px;
    background: rgba(110,86,207,.18);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: .9rem;
    flex-shrink: 0;
  }
  .icon img { width: 30px; height: 30px; filter: brightness(0) invert(1); opacity: .9; }
  .content {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
  }
  .content h3 {
    font-size: 1.08rem;
    font-weight: 600;
    color: white;
    margin-bottom: .7rem;
    line-height: 1.3;
    white-space: normal;
  }
  .chips {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: .4rem;
    row-gap: .4rem;
    width: 100%;
    max-width: 100%;
    padding: 0 .2rem;
  }
  .chip {
    background: rgba(255,255,255,.09);
    color: var(--text);
    font-size: .74rem;
    padding: .32rem .68rem;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,.14);
    white-space: nowrap;
    flex: 0 0 auto;
    transition: var(--transition);
  }
  .project-card:hover .chip {
    background: rgba(110,86,207,.25);
    border-color: var(--accent);
    color: white;
  }
  /* RESPONSIVE */
  @media (min-width: 1400px) {
    .project-card { width: 330px; height: 270px; }
  }
  @media (max-width: 768px) {
    .project-card { width: 260px; height: 230px; padding: 1.1rem; }
    .icon { width: 54px; height: 54px; margin-bottom: .8rem; }
    .icon img { width: 26px; height: 26px; }
    .content h3 { font-size: 1.02rem; margin-bottom: .6rem; }
    .chip { font-size: .72rem; padding: .3rem .6rem; }
    .grid-svg { width: 1200px; filter: blur(50px); }
    .hero { margin-bottom: 1rem; }
    .projects-section { margin-top: 0.3rem; }
    .section-header { margin-bottom: 1rem; }
    .lead { margin-bottom: 1.2rem; }
  }
</style>
