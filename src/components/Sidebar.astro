---
const { selectedItem } = Astro.props;
---

<aside class="sidebar" id="sidebar">
  <div class="sidebar-inner">
    <!-- Perfil SIN foto -->
    <div class="profile">
      <div class="profile-info">
        <h3 class="profile-name">Anthony Lacayo</h3>
        <p class="profile-role">Web & API Developer</p>
      </div>
    </div>

    <!-- Navegación -->
    <nav class="nav">
      {[
        { href: '/', label: 'Home', icon: 'home', key: 'home' },
        { href: '/web-development', label: 'Web Development', icon: 'code', key: 'web-development' },
        { href: '/api-integrations', label: 'API Integrations', icon: 'link', key: 'api-integrations' },
        { href: '/infrastructure', label: 'Infrastructure', icon: 'server', key: 'infrastructure' },
        { href: '/personal-projects', label: 'Personales', icon: 'heart', key: 'personal-projects' },
      ].map(item => (
        <a
          href={item.href}
          class={`nav-item ${selectedItem === item.key ? 'active' : ''}`}
          data-icon={item.icon}
        >
          <span class="nav-icon-wrapper">
            <i class={`icon icon-${item.icon}`}></i>
          </span>
          <span class="nav-label">{item.label}</span>
          <span class="nav-indicator"></span>
        </a>
      ))}
    </nav>

    <!-- Footer -->
    <div class="sidebar-footer">
      <p class="text-xs text-gray-500">© 2025 Anthony Lacayo</p>
    </div>
  </div>
</aside>

<!-- Botón hamburguesa (solo visible en móvil) -->
<button id="toggleSidebar" aria-label="Toggle sidebar" class="hamburger">
  <span class="hamburger-line"></span>
  <span class="hamburger-line"></span>
  <span class="hamburger-line"></span>
</button>

<script>
  document.addEventListener("astro:page-load", () => {
    const sidebar = document.getElementById("sidebar");
    const toggle = document.getElementById("toggleSidebar");

    const handleResize = () => {
      if (window.innerWidth >= 1024) {
        sidebar.classList.add("open");
        toggle.classList.remove("open");
      } else {
        sidebar.classList.remove("open");
        toggle.classList.remove("open");
      }
    };

    handleResize();
    window.addEventListener("resize", handleResize);

    toggle.addEventListener("click", () => {
      sidebar.classList.toggle("open");
      toggle.classList.toggle("open");
    });

    document.addEventListener("click", (e) => {
      if (
        window.innerWidth < 1024 &&
        sidebar.classList.contains("open") &&
        !sidebar.contains(e.target) &&
        !toggle.contains(e.target)
      ) {
        sidebar.classList.remove("open");
        toggle.classList.remove("open");
      }
    });
  });
</script>

<style>
  :root {
    --bg: linear-gradient(180deg, rgba(20, 20, 28, 0.98) 0%, rgba(10, 10, 18, 0.98) 100%);
    --accent: #6e56cf;
    --accent-hover: #8b70ff;
    --text: #e2e8f0;
    --text-muted: #94a3b8;
    --border: rgba(255, 255, 255, 0.1);
    --width: 260px;
    --radius: 16px;
  }

  /* Sidebar base */
  .sidebar {
    position: fixed;
    top: 0;
    left: -var(--width);
    width: var(--width);
    height: 100vh;
    background: var(--bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-right: 1px solid var(--border);
    box-shadow: 8px 0 32px rgba(0, 0, 0, 0.3);
    transition: left 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 60;
    display: flex;
    flex-direction: column;
  }

  .sidebar.open { left: 0; }

  @media (min-width: 1024px) {
    .sidebar { left: 0; }
  }

  .sidebar-inner {
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow-y: auto;
  }

  /* Perfil sin avatar */
  .profile {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .profile-name {
    color: #fff;
    font-weight: 700;
    font-size: 1.1rem;
  }
  .profile-role {
    color: var(--text-muted);
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }

  /* Navegación */
  .nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .nav-item {
    display: flex;
    align-items: center;
    padding: 0.9rem 1rem;
    color: var(--text);
    border-radius: var(--radius);
    position: relative;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  /* Ajuste de espacio entre icono y texto */
  .nav-label {
    margin-left: 10px; /* antes 14px */
    font-size: 0.95rem;
    white-space: nowrap;
    transition: all 0.3s ease;
  }


  /* === Ajuste de item activo === */
  .nav-item.active {
    color: #fff;
    font-weight: 600;
    transform: none;
    padding: 0.95rem 1.25rem; /* un poco más de espacio lateral */
  }

  /* Aumentar cobertura de hover para consistencia */
  .nav-item:hover {
    color: #fff;
    transform: translateX(2px);
  }


  .nav-icon-wrapper {
    width: 26px;
    height: 26px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon {
    width: 20px;
    height: 20px;
    background: currentColor;
    mask-size: contain;
    mask-repeat: no-repeat;
    mask-position: center;
    transition: transform 0.3s ease;
  }

  .nav-item:hover .icon { transform: scale(1.1); }

  .icon-home { mask-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>'); }
  .icon-code { mask-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>'); }
  .icon-link { mask-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>'); }
  .icon-server { mask-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><line x1="3" y1="9" x2="21" y2="9"/><line x1="9" y1="21" x2="9" y2="9"/></svg>'); }
  .icon-heart { mask-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/></svg>'); }

  /* Botón hamburguesa solo móvil */
  .hamburger {
    position: fixed;
    top: 50%;
    left: 16px;
    transform: translateY(-50%);
    z-index: 70;
    background: rgba(32, 32, 38, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    cursor: pointer;
    padding: 12px 10px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 44px;
    height: 44px;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  @media (min-width: 1024px) {
    .hamburger { display: none; }
  }

  .hamburger:hover {
    background: rgba(50, 50, 60, 0.95);
    border-color: var(--accent);
    transform: translateY(-50%) scale(1.05);
  }

  .hamburger-line {
    width: 20px;
    height: 2px;
    background: white;
    border-radius: 1px;
    transition: all 0.3s ease;
  }

  .hamburger.open .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  .hamburger.open .hamburger-line:nth-child(2) {
    opacity: 0;
  }
  .hamburger.open .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Footer */
  .sidebar-footer {
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  /* Scrollbar */
  .sidebar-inner::-webkit-scrollbar { width: 4px; }
  .sidebar-inner::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
  }
</style>
