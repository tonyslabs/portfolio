---
const { title, desc, tech, images = [], repo } = Astro.props;
---

<article class="project-card" client:load>
  {repo && (
    <a
      href={repo}
      target="_blank"
      rel="noopener noreferrer"
      class="repo-btn"
      aria-label="Abrir repositorio en GitHub"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="#ffffff"
        class="bi bi-github"
        viewBox="0 0 16 16"
      >
        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38
        0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13
        -.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87
        2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95
        0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12
        0 0 .67-.21 2.2.82.64-.18 1.32-.27
        2-.27s1.36.09 2 .27c1.53-1.04
        2.2-.82 2.2-.82.44 1.1.16 1.92.08
        2.12.51.56.82 1.27.82 2.15
        0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54
        1.48 0 1.07-.01 1.93-.01 2.2
        0 .21.15.46.55.38A8.01 8.01 0 0 0 16
        8c0-4.42-3.58-8-8-8"/>
      </svg>
    </a>
  )}

  <h3 class="project-title">{title}</h3>

  <div class="project-desc">
    <ul role="list">
      {desc.map((d) => <li>{d}</li>)}
    </ul>
  </div>

  {images.length > 0 && (
    <div class="gallery">
      {images.map((src, i) => (
        <img
          src={src}
          alt={`${title} screenshot ${i + 1}`}
          loading="lazy"
          class="gallery-img"
          data-index={i}
        />
      ))}
    </div>
  )}

  <div id="overlay" class="overlay">
    <div class="overlay-content">
      <img id="overlay-img" src="" alt="expanded" />
    </div>
  </div>

  <div class="label">Technologies &amp; Tools</div>
  <div class="tech-list">
    {tech.map((t) => (
      <span class="tech" data-tech={t}>{t}</span>
    ))}
  </div>
</article>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const galleryImgs = document.querySelectorAll(".gallery-img");
    const overlay = document.getElementById("overlay");
    const overlayImg = document.getElementById("overlay-img");

    galleryImgs.forEach((img) => {
      img.addEventListener("click", () => {
        overlayImg.src = img.src;
        overlay.classList.add("active");
      });
    });

    overlay.addEventListener("click", () => {
      overlay.classList.remove("active");
    });
  });
</script>

<style>
.project-card {
  position: relative;
  background: rgba(255, 255, 255, 0.04);
  border: 1px solid rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(14px) saturate(180%);
  border-radius: 18px;
  padding: 1.8rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.45);
  transition: transform 0.3s ease, background 0.3s ease;
  animation: fadeInUp 0.4s ease forwards;
}
.project-card:hover {
  transform: translateY(-6px);
  background: rgba(255, 255, 255, 0.07);
}

/* Botón GitHub */
.repo-btn {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 50%;
  width: 34px;
  height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s ease, transform 0.2s ease;
}
.repo-btn:hover {
  background: rgba(255, 255, 255, 0.18);
  transform: scale(1.1);
}

/* Título y descripción */
.project-title {
  font-family: "Inter", system-ui, sans-serif;
  font-weight: 700;
  font-size: 1.4rem;
  color: #f0f0f5;
  margin-bottom: 0.8rem;
}
.project-desc {
  font-family: "Inter", system-ui, sans-serif;
  color: #b5b5b5;
  font-size: 0.9rem;
  line-height: 1.55;
  margin-bottom: 1.2rem;
}
.project-desc ul {
  margin-left: 1.2rem;
  list-style-type: disc;
}

/* Galería horizontal */
.gallery {
  display: flex;
  overflow-x: auto;
  gap: 10px;
  padding-bottom: 0.5rem;
  margin: 1rem 0 1.5rem;
  scroll-snap-type: x mandatory;
}
.gallery::-webkit-scrollbar {
  height: 6px;
}
.gallery::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4px;
}
.gallery-img {
  flex: 0 0 auto;
  width: 240px;
  height: 135px;
  border-radius: 10px;
  object-fit: cover;
  cursor: pointer;
  transition: transform 0.2s ease, filter 0.2s ease;
  scroll-snap-align: start;
}
.gallery-img:hover {
  transform: scale(1.05);
  filter: brightness(110%);
}

.overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.65);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 100;
  border-radius: 18px;
  overflow: hidden; /* recorta cualquier borde sobrante */
}

.overlay.active {
  display: flex;
}

.overlay-content {
  max-width: 90vw;
  max-height: 85vh;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18px;
  overflow: hidden;
  box-shadow: 0 0 25px rgba(255, 255, 255, 0.2);
}

.overlay img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: inherit;
  animation: zoomIn 0.25s ease;
  cursor: zoom-out;
}


/* Etiqueta y tecnologías */
.label {
  font-family: "Inter", system-ui, sans-serif;
  color: #a0a0a0;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  margin-top: 1.2rem;
  margin-bottom: 0.5rem;
}
.tech-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}
.tech {
  background: rgba(255, 255, 255, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.18);
  padding: 0.35rem 0.75rem;
  border-radius: 8px;
  font-size: 0.8rem;
  font-family: "Inter", system-ui, sans-serif;
  color: #f1f1f1;
  transition: background 0.2s ease, transform 0.2s ease;
}
.tech:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

/* Colores específicos */
.tech[data-tech="Electron"] { background: rgba(66, 133, 244, 0.15); color: #4285f4; }
.tech[data-tech="React"] { background: rgba(97, 218, 251, 0.15); color: #61dafb; }
.tech[data-tech="TypeScript"] { background: rgba(49, 120, 198, 0.15); color: #3178c6; }
.tech[data-tech="TailwindCSS"] { background: rgba(14, 165, 233, 0.15); color: #0ea5e9; }
.tech[data-tech="Node.js"] { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
.tech[data-tech="Vite"] { background: rgba(245, 158, 11, 0.15); color: #f59e0b; }

/* Animaciones */
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
@keyframes zoomIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}
</style>
