<style>
  :root {
    --bg: linear-gradient(
      180deg,
      rgba(7, 10, 38, 0.98) 0%,
      rgba(7, 10, 38, 0.92) 100%
    );
    --accent: #863dff;
    --accent-hover: #dde0ff;
    --text: #ffffff;
    --text-muted: #dde0ff;
    --card-bg: rgba(255, 255, 255, 0.04);
    --card-border: rgba(255, 255, 255, 0.08);
    --radius: 18px;
    --sidebar-width: 260px;
    --transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }
  /* ===== Layout ===== */
  .page-wrapper {
    position: relative;
    z-index: 1;
    display: flex;
    min-height: 100vh;
    background: var(--bg);
    background-attachment: fixed;
    color: var(--text);
    overflow: hidden;
  }
  .main-content {
    flex: 1;
    padding: 1.6rem 1.25rem;
    overflow-x: hidden;
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  /* Separaci√≥n superior para que el hero no quede pegado al borde */
  .container {
    padding-top: 1.6rem;
  }
  @media (max-width: 900px) {
    .main-content {
      padding-left: 1rem;
      padding-top: 1.5rem;
    }
    .container {
      padding-top: 1.2rem;
    }
  }
  .container {
    max-width: 1300px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    width: 100%;
  }
  /* ===== Hero ===== */
  .hero {
    max-width: 780px;
    margin: 0 auto 0.4rem;
    position: relative;
    z-index: 1;
    isolation: isolate;
    padding: 2.75rem 3rem 2.25rem;
    border-radius: 32px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: linear-gradient(
      180deg,
      rgba(19, 23, 54, 0.9),
      rgba(7, 10, 38, 0.9)
    );
    box-shadow: 0 40px 120px rgba(0, 0, 0, 0.65);
    overflow: hidden;
  }
  .hero-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-direction: column;
  }
  .profile-photo {
    width: 112px;
    height: 112px;
    border-radius: 999px;
    overflow: hidden;
    border: 1px solid rgba(221, 224, 255, 0.18);
    background: linear-gradient(
      180deg,
      rgba(13, 16, 40, 0.9),
      rgba(10, 12, 32, 0.72)
    );
    box-shadow:
      0 18px 58px rgba(0, 0, 0, 0.42),
      0 0 0 1px rgba(134, 61, 255, 0.18);
    flex: 0 0 auto;
    position: relative;
  }
  .profile-photo::after {
    content: "";
    position: absolute;
    inset: -1px;
    border-radius: 999px;
    pointer-events: none;
    background: conic-gradient(
      from 180deg,
      rgba(134, 61, 255, 0.55),
      rgba(221, 224, 255, 0.12),
      rgba(134, 61, 255, 0.25)
    );
    -webkit-mask: radial-gradient(
      closest-side,
      transparent calc(100% - 2px),
      #000 calc(100% - 1px)
    );
    mask: radial-gradient(
      closest-side,
      transparent calc(100% - 2px),
      #000 calc(100% - 1px)
    );
    opacity: 0.55;
  }
  .profile-photo img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: 50% 35%;
    transform: scale(1.04);
    filter: contrast(1.05) saturate(1.05);
  }
  .hero-content h1 {
    font-size: clamp(2.15rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    background: linear-gradient(135deg, #fff, #d0d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -0.5px;
    overflow-wrap: normal;
    text-align: center;
  }
  .headline-line {
    display: block;
    white-space: nowrap;
  }
  .headline-mobile {
    display: none;
  }
  .lead {
    font-size: 1.08rem;
    color: rgba(255, 255, 255, 0.78);
    line-height: 1.65;
    max-width: 680px;
    margin-bottom: 0.8rem;
  }
  .hero-accent {
    margin-top: 0.2rem;
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.75);
    position: relative;
  }
  .hero-accent::before {
    content: "";
    position: absolute;
    bottom: -6px;
    left: 50%;
    width: 60px;
    height: 2px;
    border-radius: 999px;
    background: linear-gradient(
      90deg,
      rgba(134, 61, 255, 0),
      rgba(134, 61, 255, 1),
      rgba(134, 61, 255, 0)
    );
    transform: translateX(-50%);
  }
  .hero::before {
    content: "";
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        circle at 20% 10%,
        rgba(134, 61, 255, 0.35),
        transparent 45%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(221, 224, 255, 0.08),
        transparent 60%
      );
    opacity: 0.8;
    pointer-events: none;
    z-index: 0;
    mix-blend-mode: screen;
  }
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
  }
  .contact-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(
      135deg,
      rgba(134, 61, 255, 0.95),
      rgba(221, 224, 255, 0.22)
    );
    color: white;
    padding: 0.85rem 1.9rem;
    border-radius: 14px;
    font-weight: 600;
    font-size: 0.96rem;
    text-decoration: none;
    transition: var(--transition);
    border: 1px solid rgba(134, 61, 255, 0.25);
    box-shadow:
      0 0 0 1px rgba(134, 61, 255, 0.14),
      0 0 34px rgba(134, 61, 255, 0.18);
  }
  .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow:
      0 0 0 1px rgba(221, 224, 255, 0.18),
      0 0 46px rgba(134, 61, 255, 0.26);
  }
  .btn-arrow {
    transition: transform 0.3s ease;
  }
  .contact-btn:hover .btn-arrow {
    transform: translateX(4px);
  }

  .hero-actions {
    display: flex;
    align-items: center;
    gap: 0.9rem;
    margin-top: 0.9rem;
    flex-wrap: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding-top: 0.9rem;
    margin-top: 1.4rem;
    justify-content: center;
  }

  .hero-actions > * {
    flex-shrink: 0;
  }

  .secondary-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.72rem 1.05rem;
    border-radius: 14px;
    text-decoration: none;
    color: rgba(221, 224, 255, 0.98);
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.09);
    transition: var(--transition);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .secondary-btn:hover {
    transform: translateY(-1px);
    border-color: rgba(134, 61, 255, 0.28);
    box-shadow:
      0 0 0 1px rgba(134, 61, 255, 0.14),
      0 0 28px rgba(134, 61, 255, 0.14);
    color: #fff;
  }

  .hero-social {
    display: inline-flex;
    gap: 0.55rem;
    align-items: center;
  }

  .hero-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
    margin: 1.5rem auto 2rem;
    max-width: 1100px;
    justify-items: center;
    width: 100%;
  }
  .highlight-card {
    padding: 1.35rem 1.45rem;
    border-radius: 26px;
    border: 1px solid rgba(134, 61, 255, 0.35);
    background: rgba(12, 15, 30, 0.85);
    box-shadow: 0 35px 60px rgba(0, 0, 0, 0.55);
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    position: relative;
    overflow: hidden;
  }
  .highlight-card strong {
    font-size: 1rem;
    letter-spacing: 0.04em;
  }
  .highlight-card p {
    margin: 0;
    font-size: 0.92rem;
    line-height: 1.5;
    color: rgba(221, 224, 255, 0.75);
  }
  .highlight-card::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      140deg,
      rgba(134, 61, 255, 0.25),
      transparent 60%
    );
    opacity: 0.2;
    pointer-events: none;
  }
  .highlight-icon {
    width: 38px;
    height: 38px;
    border-radius: 14px;
    background: radial-gradient(
      circle at 30% 30%,
      rgba(255, 255, 255, 0.25),
      rgba(134, 61, 255, 0.24)
    );
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 1.1rem;
    border: 1px solid rgba(134, 61, 255, 0.65);
  }

  .home-links {
    margin: 2.4rem auto 0;
    width: 100%;
    max-width: 1140px;
    padding: 2rem;
    border-radius: 28px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(15, 19, 42, 0.9);
    box-shadow: 0 40px 70px rgba(6, 9, 26, 0.55);
    position: relative;
    overflow: hidden;
  }
  .home-links::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 20% -10%,
      rgba(134, 61, 255, 0.25),
      transparent 50%
    );
    opacity: 0.5;
    pointer-events: none;
  }
  .home-links-banner {
    position: relative;
    z-index: 1;
    margin-bottom: 1.25rem;
    text-align: center;
  }
  .home-links-title h2 {
    margin: 0;
    font-size: clamp(1.9rem, 3vw, 2.35rem);
  }
  .home-links-title p {
    margin: 0.45rem 0 0;
    color: rgba(221, 224, 255, 0.82);
  }
  .home-links-divider {
    display: block;
    width: 140px;
    height: 2px;
    margin: 1rem auto 0.35rem;
    background: linear-gradient(
      90deg,
      rgba(134, 61, 255, 0),
      rgba(134, 61, 255, 1),
      rgba(134, 61, 255, 0)
    );
    border-radius: 99px;
    position: relative;
  }
  .link-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.1rem;
    margin-top: 0.8rem;
  }
  .link-card {
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
    padding: 1.45rem;
    border-radius: 24px;
    text-decoration: none;
    color: inherit;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: linear-gradient(
      180deg,
      rgba(14, 20, 45, 0.9),
      rgba(7, 10, 30, 0.9)
    );
    transition:
      transform var(--transition),
      border-color var(--transition),
      box-shadow var(--transition);
  }
  .link-card-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.4rem;
    background: rgba(134, 61, 255, 0.12);
    border: 1px solid rgba(134, 61, 255, 0.35);
  }
  .link-card-icon svg {
    width: 22px;
    height: 22px;
    color: #fff;
  }
  .link-card-icon svg rect {
    stroke: currentColor;
    fill: none;
    stroke-width: 1.5;
  }
  .link-card-icon svg circle {
    fill: currentColor;
  }
  .link-card h3 {
    margin: 0;
    font-size: 1.1rem;
    letter-spacing: 0.01em;
  }
  .link-card p {
    margin: 0;
    color: rgba(221, 224, 255, 0.7);
    line-height: 1.4;
    font-size: 0.95rem;
  }
  .link-card:hover {
    transform: translateY(-4px);
    border-color: rgba(134, 61, 255, 0.5);
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.45);
  }

  .icon-btn {
    width: 40px;
    height: 40px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.09);
    color: rgba(221, 224, 255, 0.92);
    text-decoration: none;
    transition: var(--transition);
  }
  .icon-btn:hover {
    transform: translateY(-1px);
    border-color: rgba(134, 61, 255, 0.28);
    color: #fff;
    box-shadow:
      0 0 0 1px rgba(134, 61, 255, 0.14),
      0 0 22px rgba(134, 61, 255, 0.14);
  }
  /* ===== Sections ===== */
  .section-header {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.35rem;
    margin-bottom: 1.2rem;
  }
  .section-header h2 {
    font-size: 1.45rem;
    font-weight: 600;
    color: white;
  }
  .section-intro {
    color: rgba(221, 224, 255, 0.75);
    font-size: 0.98rem;
    line-height: 1.6;
    margin: 0.4rem 0 0;
    max-width: 640px;
  }
  [data-animate] {
    opacity: 0;
    transform: translateY(25px);
    transition:
      opacity 0.8s ease,
      transform 0.8s ease;
  }
  [data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }
  /* ===== Projects ===== */
  .projects-section {
    margin-top: 0.5rem; /* Muy cerca del bot√≥n */
    position: relative;
    z-index: 2;
  }
  .projects-track {
    display: flex;
    gap: 1.2rem;
    overflow-x: auto;
    padding: 1rem 0;
    scroll-snap-type: x mandatory;
    scroll-padding: 0 1.5rem;
    scrollbar-width: none;
    /* Centrado perfecto */
    justify-content: center;
    flex-wrap: nowrap;
    -webkit-overflow-scrolling: touch;
  }
  .projects-track::before,
  .projects-track::after {
    content: "";
    flex: 0 0 1rem;
  }
  .projects-track::-webkit-scrollbar {
    display: none;
  }

  .project-card {
    flex: 0 0 310px;
    width: 310px;
    height: 250px;
    padding: 1.4rem 1.1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    text-align: center;
    text-decoration: none;
    color: var(--text);
    transition: var(--transition);
    box-sizing: border-box;
    overflow: hidden;
