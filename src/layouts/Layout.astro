---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  path?: string; // e.g. "/web-development"
  url?: string; // canonical URL (preferred)
  ogImage?: string;
  image?: string; // legacy/compat with pages
}

const { title, description, path, url, ogImage, image } = Astro.props as Props;

const site = Astro.site ? String(Astro.site) : undefined;
const canonical =
  url ?? (site && path ? new URL(path, site).toString() : undefined);
const resolvedOgImage = ogImage ?? image;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={
        description ??
        "Portfolio de Anthony Lacayo: sistemas web, APIs e infraestructura."
      }
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {canonical && <link rel="canonical" href={canonical} />}
    <link rel="icon" type="image/png" href="/assets/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={
        description ??
        "Portfolio de Anthony Lacayo: sistemas web, APIs e infraestructura."
      }
    />
    {resolvedOgImage && <meta property="og:image" content={resolvedOgImage} />}

    <!-- Styles & Fonts -->
    <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/" rel="preconnect" />
    <link href="https://fonts.gstatic.com/" rel="preconnect" crossorigin="anonymous" />
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <script>
      import { setupLightbox } from '../scripts/lightbox.js';
      import { setupAnimations } from '../scripts/animations.js';

      let cleanupLightbox;
      let cleanupAnimations;
      document.addEventListener('astro:page-load', () => {
        if (cleanupLightbox) cleanupLightbox();
        if (cleanupAnimations) cleanupAnimations();
        cleanupLightbox = setupLightbox();
        cleanupAnimations = setupAnimations();
      });
      document.addEventListener('astro:before-swap', () => {
        if (cleanupLightbox) cleanupLightbox();
        if (cleanupAnimations) cleanupAnimations();
      });
    </script>
  </body>
  
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #070a26;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
