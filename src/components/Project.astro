---
interface Props {
  title: string;
  desc: string[];
  tech: string[];
  images?: string[];
  repo?: string;
  site?: string;
  lightboxId?: string;
}

const { title, desc, tech, images = [], repo, site, lightboxId } =
  Astro.props as Props;
---

<article class="project-card">
  <div class="actions">
    {site && (
      <a
        href={site}
        target="_blank"
        rel="noopener noreferrer"
        class="site-btn"
        aria-label="Abrir sitio del proyecto"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="#ffffff" viewBox="0 0 16 16">
          <path d="M6.354 5.5H4.5a.5.5 0 0 0-.5.5v6a.5.5 0 0 0 .5.5h6a.5.5 0 0 0 .5-.5v-1.854a.5.5 0 0 1 1 0V12a1.5 1.5 0 0 1-1.5 1.5h-6A1.5 1.5 0 0 1 3 12V6A1.5 1.5 0 0 1 4.5 4.5h1.854a.5.5 0 1 1 0 1Z"/>
          <path d="M11 2.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0V3.707l-6.146 6.147a.5.5 0 0 1-.708-.708L13.293 3H11.5a.5.5 0 0 1-.5-.5Z"/>
        </svg>
      </a>
    )}

    {repo && (
      <a
        href={repo}
        target="_blank"
        rel="noopener noreferrer"
        class="repo-btn"
        aria-label="Abrir repositorio en GitHub"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="#ffffff"
          class="bi bi-github"
          viewBox="0 0 16 16"
        >
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38
          0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13
          -.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87
          2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95
          0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12
          0 0 .67-.21 2.2.82.64-.18 1.32-.27
          2-.27s1.36.09 2 .27c1.53-1.04
          2.2-.82 2.2-.82.44 1.1.16 1.92.08
          2.12.51.56.82 1.27.82 2.15
          0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54
          1.48 0 1.07-.01 1.93-.01 2.2
          0 .21.15.46.55.38A8.01 8.01 0 0 0 16
          8c0-4.42-3.58-8-8-8"/>
        </svg>
      </a>
    )}
  </div>

  <h3 class="project-title">{title}</h3>

  <div class="project-desc">
    <ul role="list">
      {desc.map((d) => <li>{d}</li>)}
    </ul>
  </div>

  {images.length > 0 && (
    <div class="gallery">
      {images.map((src, i) => (
        <a
          href={src}
          class="lightbox-link"
          data-lightbox={lightboxId ?? title}
          aria-label={`Abrir imagen ${i + 1} del proyecto ${title}`}
        >
          <img
            src={src}
            alt={`Captura ${i + 1} de ${title}`}
            loading="lazy"
            class="gallery-img"
            data-index={i}
          />
        </a>
      ))}
    </div>
  )}

  <div class="label">Tecnologías y herramientas</div>
  <div class="tech-list">
    {tech.map((t) => (
      <span class="tech" data-tech={t}>{t}</span>
    ))}
  </div>
</article>

<style>
.project-card {
  position: relative;
  width: 100%;
  max-width: var(--project-card-max, 1100px);
  /* Glass */
  border: 1px solid transparent;
  background:
    rgba(255, 255, 255, 0.035) padding-box,
    linear-gradient(135deg, rgba(134, 61, 255, 0.55), rgba(221, 224, 255, 0.18)) border-box;
  backdrop-filter: blur(18px) saturate(165%);
  border-radius: 18px;
  padding: 1.55rem;
  box-shadow: 0 14px 40px rgba(0, 0, 0, 0.55);
  transition: transform 0.22s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.22s cubic-bezier(0.4, 0, 0.2, 1), border-color 0.22s cubic-bezier(0.4, 0, 0.2, 1);
  animation: fadeInUp 0.4s ease forwards;
}
.project-card::before {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 18px;
  pointer-events: none;
  opacity: 0;
  box-shadow:
    0 0 0 1px rgba(221, 224, 255, 0.14),
    0 0 54px rgba(134, 61, 255, 0.18);
  transition: opacity 0.22s cubic-bezier(0.4, 0, 0.2, 1);
}
.project-card:hover {
  transform: translateY(-4px);
  border-color: rgba(221, 224, 255, 0.24);
  box-shadow: 0 18px 60px rgba(0, 0, 0, 0.62);
}
.project-card:hover::before { opacity: 1; }

/* Botones superiores */
.actions {
  position: absolute;
  top: 1rem;
  right: 1rem;
  display: flex;
  gap: 0.6rem;
}

.repo-btn,
.site-btn {
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 50%;
  width: 34px;
  height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s ease, transform 0.2s ease;
}
.repo-btn:hover,
.site-btn:hover {
  background: rgba(255, 255, 255, 0.18);
  transform: scale(1.1);
}

/* Título y descripción */
.project-title {
  font-weight: 700;
  font-size: 1.4rem;
  color: #f0f0f5;
  margin-bottom: 0.8rem;
}
.project-desc {
  color: #b5b5b5;
  font-size: 0.9rem;
  line-height: 1.55;
  margin-bottom: 1.2rem;
}
.project-desc ul {
  margin-left: 1.2rem;
  list-style-type: disc;
}

/* Galería horizontal */
.gallery {
  display: flex;
  overflow-x: auto;
  gap: 10px;
  padding-bottom: 0.5rem;
  margin: 1rem 0 1.5rem;
  scroll-snap-type: x mandatory;
}
.gallery a {
  flex: 0 0 auto;
  scroll-snap-align: start;
}
.gallery::-webkit-scrollbar {
  height: 6px;
}
.gallery::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4px;
}
.gallery-img {
  width: 240px;
  height: 135px;
  border-radius: 10px;
  object-fit: cover;
  cursor: pointer;
  transition: transform 0.2s ease, filter 0.2s ease;
}
.gallery-img:hover {
  transform: scale(1.05);
  filter: brightness(110%);
}

/* Etiqueta y tecnologías */
.label {
  color: #a0a0a0;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  margin-top: 1.2rem;
  margin-bottom: 0.5rem;
}
.tech-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}
.tech {
  background: rgba(255, 255, 255, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.18);
  padding: 0.35rem 0.75rem;
  border-radius: 8px;
  font-size: 0.8rem;
  font-family: "Inter", system-ui, sans-serif;
  color: #f1f1f1;
  transition: background 0.2s ease, transform 0.2s ease;
}
.tech:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

/* Colores específicos */
.tech[data-tech="Electron"] { background: rgba(66, 133, 244, 0.15); color: #4285f4; }
.tech[data-tech="React"] { background: rgba(97, 218, 251, 0.15); color: #61dafb; }
.tech[data-tech="TypeScript"] { background: rgba(49, 120, 198, 0.15); color: #3178c6; }
.tech[data-tech="TailwindCSS"] { background: rgba(14, 165, 233, 0.15); color: #0ea5e9; }
.tech[data-tech="Node.js"] { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
.tech[data-tech="Vite"] { background: rgba(245, 158, 11, 0.15); color: #f59e0b; }
.tech[data-tech="Laravel"] { background: rgba(239, 68, 68, 0.15); color: #ef4444; }
.tech[data-tech="Alpine.js"] { background: rgba(236, 72, 153, 0.15); color: #ec4899; }

/* Animaciones */
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>
